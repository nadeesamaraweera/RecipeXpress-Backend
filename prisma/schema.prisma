generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int             @id @default(autoincrement())
  email     String          @unique
  password  String
  searches  SearchHistory[]
  createdAt DateTime        @default(now())
}

model SearchHistory {
  id        Int      @id @default(autoincrement())
  query     String
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())
}
